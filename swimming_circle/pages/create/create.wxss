/* pages/create/create.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
}

.banner {
  width: 100%;
  height: 200px;
  background-image: url('http://bmob-cdn-24905.bmobcloud.com/2019/05/19/386a4e1b40bd15e4809977e2d153a7b0.jpg');
  background-size: cover;
  background-position: center;
  border-bottom: 1px dashed rgba(50,50,50,0.7);
}

.logo {
  width: 200px;
  height: 150px;
}

.font-title {
  font-size: 20px;
}

.font-content {
  font-size: 18px;
}

.font-small {
  font-size: 12px;
}

.font-primary {
  color: #95d9ea;
}

.btn-primary {
  width: 50%;
  height: 40px;
  background-color: #95d9ea;
  color: white;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.input-group {
  border: 1px solid #95d9ea;
  border-radius: 10px;
  margin: 30px;
  padding: 20px;
  position: relative;
}

.input-tag {
  position: absolute;
  top: -12px;
  left: 15px;
  background-color: white;
  text-align: center;
  padding-left: 5px;
  padding-right: 5px;
}

.text-counter {
  position:absolute;
  bottom: 10px;
  right: 10px;
}

.photos {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: auto;
  white-space: pre-wrap;
  padding-top: 10rpx;
}


.photo {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #95d9ea;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx;
  position: relative;
}

.upload {
  width: 90%;
  height: 90%;
}

.delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.photo-counter {
  position:absolute;
  bottom: 10px;
  right: 10px;
}